# Replit Configuration for Juguetron API

language = "python3"
run = "uvicorn app:app --host 0.0.0.0 --port 8000"
modules = ["python-3.12"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5000"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn app:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
